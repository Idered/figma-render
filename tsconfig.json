{
  "compilerOptions": {
    "outDir": "lib/esm",
    "rootDir": "src",

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",

    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
